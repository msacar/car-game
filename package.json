{
  "name": "multiplayer-car-game-ts",
  "version": "2.0.0",
  "description": "TypeScript Three.js multiplayer car racing game",
  "main": "dist/server.js",
  "scripts": {
    "build": "npm run build:server && npm run build:client",
    "build:server": "tsc --project tsconfig.json",
    "build:client": "webpack --mode production",
    "build:dev": "npm run build:server && webpack --mode development",
    "start": "node dist/server.js",
    "dev": "concurrently \"tsc --watch\" \"webpack --mode development --watch\" \"nodemon dist/server.js\"",
    "clean": "rm -rf dist public/js/game.js"
  },
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.7.2",
    "socket.io-client": "^4.8.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^20.5.0",
    "@types/socket.io-client": "^3.0.0",
    "@types/three": "^0.154.0",
    "concurrently": "^8.2.0",
    "nodemon": "^3.0.1",
    "ts-loader": "^9.4.4",
    "typescript": "^5.1.6",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4"
  },
  "keywords": [
    "typescript",
    "game",
    "multiplayer",
    "threejs",
    "racing"
  ],
  "author": "Your Name",
  "license": "MIT"
}
